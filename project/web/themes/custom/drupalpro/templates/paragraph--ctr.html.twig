{#
/**
 * @file
 * Olivero's theme override to display the content region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{%
  set classes = [
    'region',
    'region--' ~ region|clean_class,
    'grid-full',
    'layout--pass--content-medium',
  ]
%}

    
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ pattern('card-text-right', {
        image: paragraph.field_image.0.value.image,
        title: paragraph.field_title.0.value.title,
        subtitle: paragraph.field_content.0.value.subtitle,
        link: paragraph.field_link.0.value.link,
      }) }}
    {% endblock %}
  </div>
{% endblock paragraph %}


